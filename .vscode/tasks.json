{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "CMake Build",
        "type": "shell",
        "command": "cmake --build build",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "CMake Configure",
        "type": "shell",
        "command": "cmake -S . -B build",
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "problemMatcher": []
      }
    ]
  }
  